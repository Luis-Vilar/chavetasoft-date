{
  "version": "0.1.5",
  "license": "MIT",
  "description": "A simple date library",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "npx lint src",
    "prepare": "tsdx build",
    "size": "size-limit",
    "play:ts": "ts-node src/playground/playground.ts",
    "play:js": "node src/playground/playground.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "chavetasoft-date",
  "author": "Luis Vilar",
  "module": "dist/index.js",
  "size-limit": [
    {
      "path": "dist/chavetasoft-date.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/chavetasoft-date.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.2",
    "@types/node": "^20.11.20",
    "husky": "^9.0.11",
    "size-limit": "^11.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.4.0"
  }
}
